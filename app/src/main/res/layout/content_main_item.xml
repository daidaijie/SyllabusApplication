<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            card_view:cardBackgroundColor="@color/material_white"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/toSyllabusItemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleColor="#2B2B2B"
                app:mrl_rippleDuration="100"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/syllabus"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:text="课程表"
                        android:textColor="@color/defaultTextColor"
                        android:textSize="20sp"/>

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toWifiItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                app:cardIcon="@drawable/ic_wifi"
                app:cardTitle="流量验证">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toOAItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_oa"
                app:cardTitle="办公自动化">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toSTUItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_school"
                app:cardTitle="校园动态">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toGradeCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                app:cardIcon="@drawable/ic_grade"
                app:cardTitle="成绩">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toExamCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_exam"
                app:cardTitle="考试">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toTakeOutCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_takeout"
                app:cardTitle="校园外卖">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toLibraryCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                app:cardIcon="@drawable/ic_library"
                app:cardTitle="图书检索">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:id="@+id/toEmailCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_school_email"
                app:cardTitle="校内邮箱">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

            <com.example.daidaijie.syllabusapplication.widget.ItemCardLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:cardIcon="@drawable/ic_question"
                app:cardTitle="敬请期待">
            </com.example.daidaijie.syllabusapplication.widget.ItemCardLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
